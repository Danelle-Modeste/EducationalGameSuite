<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uwi.sta.educationalgamesuite">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActionBar_Menu"
            android:label="@string/title_content_action_bar__menu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".PlaySudokuActivity"
            android:theme="@style/SudokuTheme"
            android:label="@string/title_activity_sudoku_play"/>

        <activity
            android:name=".SudokuMain"
            android:label="@string/title_activity_sudoku_main"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".HighScores"
            android:label="@string/title_activity_high_scores"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Instructions"
            android:label="@string/title_activity_instructions"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>