<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uwi.sta.educationalgamesuite.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/i">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME"
        android:id="@+id/txt_welc"
        android:textAlignment="center"
        android:layout_below="@+id/imgBtnProfile"
        android:layout_alignEnd="@+id/imgBtnProfile"/>


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imgBtnProfile"
        android:src="@drawable/profile_pic"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true" />

    <!--<ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvGameList"
        android:layout_below="@+id/txt_welc"
        android:layout_alignEnd="@+id/imgBtnProfile"
        android:headerDividersEnabled="false"
        android:layout_marginTop="40dp"/>
-->
<GridView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lvGameList"
    android:layout_below="@+id/txt_welc"
    android:layout_alignEnd="@+id/imgBtnProfile"
    android:headerDividersEnabled="false"
    android:layout_marginTop="40dp"
    android:numColumns="3"
    android:verticalSpacing="5dp"
    android:horizontalSpacing="8dp"/>
</RelativeLayout>
